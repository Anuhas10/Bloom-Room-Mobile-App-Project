<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProduct_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/Update_P_Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Product ID"
                android:inputType="text" />

            <EditText
                android:id="@+id/Update_P_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Product Name"
                android:inputType="text" />

            <EditText
                android:id="@+id/Update_P_Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Product Price"
                android:inputType="text" />

            <EditText
                android:id="@+id/Update_P_Qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Product Quantity"
                android:inputType="text" />

            <EditText
                android:id="@+id/Update_P_Cate_Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Category Id"
                android:inputType="text" />

            <Button
                android:id="@+id/Update_P_Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Product" />

            <Button
                android:id="@+id/Delete_P_Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Product" />

            <Button
                android:id="@+id/pre_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back to Admin Menu" />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>