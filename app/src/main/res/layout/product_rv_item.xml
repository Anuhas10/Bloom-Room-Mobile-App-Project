<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Update_Pro_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product View Table"
            android:textAlignment="center"
            android:textSize="50dp"/>

        <TextView
            android:id="@+id/Update_Pro_Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Product ID" />

        <TextView
            android:id="@+id/Update_Pro_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Product Name" />

        <TextView
            android:id="@+id/Update_Pro_Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Product Price" />

        <TextView
            android:id="@+id/Update_Pro_Qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Product Quantity" />

        <TextView
            android:id="@+id/Update_Pro_Cate_Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Product Category ID" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>